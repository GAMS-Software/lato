<%= turbo_frame_tag 'account_form_user' do %>
  <%= form_with model: user, url: lato.account_update_user_action_path, data: { turbo_frame: '_self' } do |form| %>
    <%= lato_form_notices class: %w[col col-12] %>
    <%= lato_form_errors user, class: %w[col col-12] %>
    
    <div class="row">
      <div class="col col-12 col-md-4 mb-3">
        <%= lato_form_item_label form, :first_name, 'Nome' %>
        <%= lato_form_item_input_text form, :first_name, required: true %>
      </div>

      <div class="col col-12 col-md-4 mb-3">
        <%= lato_form_item_label form, :last_name, 'Cognome' %>
        <%= lato_form_item_input_text form, :last_name, required: true %>
      </div>

      <div class="col col-12 col-md-4 mb-3">
        <%= lato_form_item_label form, :email, 'Indirizzo email' %>
        <%= lato_form_item_input_email form, :email, required: true %>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <%= lato_form_submit form, 'Aggiorna' %>
    </div>
  <% end %>
<% end %>
