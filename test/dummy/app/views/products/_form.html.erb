<%

product ||= Product.new

%>

<%= turbo_frame_tag dom_id(product, 'form') do %>
  <%= form_with model: product, url: '#', data: { turbo_frame: '_self', controller: 'lato-form' } do |form| %>
    <%= lato_form_notices class: %w[mb-3] %>
    <%= lato_form_errors product, class: %w[mb-3] %>

    <div class="mb-3">
      <%= lato_form_item_label form, :code %>
      <%= lato_form_item_input_text form, :code, required: true %>
    </div>

    <div class="d-flex justify-content-end">
      <%= lato_form_submit form, product.persisted? ? 'Aggiorna' : 'Conferma', class: %w[btn-success] %>
    </div>
  <% end %>
<% end %>
